{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "unplugin-vue-define-options/macros-global"
    ],
  },
  // 指定要编译的路径列表
  "include": [
    "../components/**/*.ts",
    "../components/**/*.d.ts",
    "../components/**/*.tsx",
    "../components/**/*.vue",
    "index.ts",
    "types/**/*.d.ts",
    "types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "vite.config.ts",
    "script",
    "src/**/*.test.ts"
  ],
}